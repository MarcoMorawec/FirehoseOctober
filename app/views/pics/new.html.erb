<div class="my-wrapper text-center">

	<h1 class="custom-font-1">Upload Your Pic</h1>

	<div class="span6 offset3 stolen-surfbox">
		<%= simple_form_for @pic do |f| %>
			<%= f.input :hour, :label => 'Which hour is this for?' %>

			<br/>
			<%= f.input :emotion, :label => 'How did you feel?', placeholder: 'I\'m super STOKED!'  %>

			<br/>
			<%= f.input :learned, :label => 'What did you learn?',:input_html => { :rows => 10 }, placeholder: 'Ruby, Rails, CSS3, HTML5, Responsive Design, Databases, Models, Controllers, GitHub, JUSTIN BIEBER is awesome - ahhhh!' %>

			<br/>

			<%= submit_tag "Save my Picture", :class => 'btn btn-large btn-primary' %>
		<% end %>
	</div>
</div>
